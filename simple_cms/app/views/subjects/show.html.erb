<%= link_to("<< Back to List", subjects_path, :class => 'back-link') %>

<div class="subjects show">
  <h2>Show Subject</h2>

  <table summary="Subject detail view">
    <tr>
      <th>Name</th>
      <td><%= @subject.name %></td>
    </tr>
    <tr>
      <th>Position</th>
      <td><%= @subject.position %></td>
    </tr>
    <tr>
      <th>Visible?</th>
      <td><%= status_tag(@subject.visible) %></td>
    </tr>
    <tr>
      <th>Publish DateTime</th>
      <td><%= @subject.created_at.strftime("%m/%d/%Y %I:%M:%S %p") %></td>
    </tr>
    <tr>
      <th>Last Modification</th>
      <td><%= @subject.updated_at.strftime("%m/%d/%Y %I:%M:%S %p") %></td>
    </tr>
  </table>

</div>